<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<FlowPane fx:controller="forecast.ForecastController" xmlns:fx="http://javafx.com/fxml" stylesheets="@style.css" orientation="VERTICAL">
    <VBox fx:id="forecastPane" prefWidth="500" prefHeight="400">
        <HBox alignment="CENTER_RIGHT">
            <Label styleClass="label-suffix-margin, weather-main-font" fx:id="temperature" />
            <Label styleClass="label-margin, weather-main-font">Â°C</Label>
            <ImageView fx:id="icon" fitHeight="64.0" fitWidth="64.0" layoutX="60.0" pickOnBounds="true"/>
        </HBox>
        <HBox alignment="CENTER_RIGHT">
            <Label styleClass="label-margin, weather-font">Standort:</Label>
            <Label styleClass="label-margin, weather-font" fx:id="timeZone"/>
        </HBox>
        <HBox alignment="CENTER_RIGHT">
            <Label styleClass="label-margin, weather-font" fx:id="summary"/>
        </HBox>
        <HBox alignment="CENTER_RIGHT">
            <Label styleClass="label-margin, weather-font">Wolken:</Label>
            <Label styleClass="label-suffix-margin, weather-font" fx:id="cloudCover"/>
            <Label styleClass="label-margin, weather-font">%</Label>
        </HBox>
        <HBox alignment="CENTER_RIGHT">
            <Label styleClass="label-margin, weather-font">Luftfeuchtigkeit:</Label>
            <Label styleClass="label-suffix-margin, weather-font" fx:id="humidity"/>
	        <Label styleClass="label-margin, weather-font">%</Label>
    	</HBox>
        <HBox alignment="CENTER_RIGHT">
            <Label styleClass="label-margin, weather-font">Windgeschwindigkeit:</Label>
            <Label styleClass="label-suffix-margin, weather-font" fx:id="windSpeed"/>
            <Label styleClass="label-margin, weather-font">km/h</Label>
        </HBox>
        <HBox alignment="CENTER_RIGHT">
            <Label styleClass="label-margin, weather-font" fx:id="futureSummary" wrapText="true" textAlignment="RIGHT"/>
        </HBox>
    </VBox>
</FlowPane>
